<header class="bg-white shadow-md">
  <nav class="container mx-auto px-6 py-3" data-controller="mobile-menu">
    <div class="flex justify-between items-center">
      <!-- Logo Component -->
      <div data-controller="logo">
        <a href="#" class="flex items-center text-xl font-semibold text-gray-700">
          <svg class="h-8 w-8 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          Awesome Co.
        </a>
      </div>
        
      <!-- Desktop Navigation Component -->
      <div class="hidden md:flex items-center space-x-8" data-controller="desktop-nav">
        <a href="#" class="text-gray-600 hover:text-gray-900 transition duration-300">Home</a>
        <a href="#" class="text-gray-600 hover:text-gray-900 transition duration-300">Features</a>
        <a href="#" class="text-gray-600 hover:text-gray-900 transition duration-300">Contact</a>
        
        <!-- Signup Modal -->
        <div data-controller="modal">
          <button data-action="click->modal#show" class="bg-purple-600 text-white px-4 py-2 rounded-full hover:bg-purple-700 transition duration-300">Sign Up</button>

          <div data-modal-target="modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" data-action="click->modal#hide">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
              <div class="mt-3 text-center">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Sign Up</h3>
                <div class="mt-2 px-7 py-3">
                  <form data-action="submit->modal#submitForm">
                      <input type="email" placeholder="Email" class="mt-2 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1" required />
                      <input type="password" placeholder="Password" class="mt-2 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1" required />
                      <input type="password" placeholder="Password" class="mt-2 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1" required />
                      <button type="submit" class="mt-4 bg-purple-600 text-white px-4 py-2 rounded-full hover:bg-purple-700 transition duration-300">Create Account</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
        
        <!-- Mobile Menu Toggle Component -->
      <div class="md:hidden flex items-center">
        <button data-action="mobile-menu#toggle" type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="toggle menu">
          <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
            <path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
          </svg>
        </button>
      </div>
    </div>
    
      <!-- Mobile Navigation Menu Component -->
    <div class="md:hidden">
      <div data-mobile-menu-target="menu" class="px-2 pt-2 pb-4 space-y-1 sm:px-3 hidden">
        <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition duration-300">Home</a>
        <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition duration-300">Features</a>
        <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition duration-300">Contact</a>
        <div data-controller="modal">
          <button data-action="click->modal#show" class="block w-full text-left px-3 py-2 rounded-md text-base font-medium bg-purple-600 text-white hover:bg-purple-700 transition duration-300">Sign Up</button>
          <!-- Modal content (same as desktop version) -->
          </div>
      </div>
    </div>
  </nav>
</header>